<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="@dimen/audio_player_small_fragment_height">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/audio_player_pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/audio_player_small_fragment_height">

                    <fragment
                        android:id="@+id/audio_player_fragment"
                        android:name="com.sms.android.fragment.AudioPlayerFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout="@layout/fragment_audio_player" />

                    <fragment
                        android:id="@+id/audio_playlist_fragment"
                        android:name="com.sms.android.fragment.AudioPlaylistFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:layout="@layout/fragment_audio_playlist" />
                </android.support.v4.view.ViewPager>

                <fragment
                    android:id="@+id/fragment_audio_player_small"
                    android:name="com.sms.android.fragment.AudioPlayerSmallFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/audio_player_small_fragment_height"
                    tools:layout="@layout/fragment_audio_player_small" />

            </FrameLayout>

        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/navigation_drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>